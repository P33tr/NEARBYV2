@inherits LayoutComponentBase
@inject ISnackbar Snackbar
@inject NavigationManager NavigationManager
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Elevation="10">
        <MudText Typo="Typo.h5">Nearby Cafe</MudText>   
        <MudSpacer/>
        <AccessControl />
        <MudFab Color="Color.Primary" 
                Icon="@Icons.Filled.Reviews" Size="Size.Small" 
                IconSize="Size.Small" Label="Reviews"
                OnClick="@((e) => GotoReviews())"></MudFab>
        <MudFab Color="Color.Primary" Icon="@Icons.Material.Filled.Add" aria-label="add" OnClick="@((e) => ClickedIt())"/>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {

    void ClickedIt()
    {
        Snackbar.Add(" <MudAlert Severity='Severity.Info'>The reactor was fired up successfully</MudAlert>", severity:Severity.Success);
    }

    void GotoReviews()
    {
        Snackbar.Add(" <MudAlert Severity='Severity.Info'>Going to Reviews.</MudAlert>", severity:Severity.Success);
        NavigationManager.NavigateTo("Reviews");
    }
}